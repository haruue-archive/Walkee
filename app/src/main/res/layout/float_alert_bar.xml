<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            android:padding="15dp"
            android:background="@color/bg_float_alert_card">

            <TextView
                android:id="@+id/tv_float_alert_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/float_alert_title"
                android:textColor="@color/tc_float_alert_title"
                android:textSize="@dimen/ts_float_alert_title"/>

            <TextView
                android:id="@+id/tv_float_alert_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/float_alert_summary"
                android:textColor="@color/tc_float_alert_summary"
                android:textSize="@dimen/ts_float_alert_summary"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>