<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Window Translucent Design - BEGIN -->
    <!-- see: http://haruue.moe/blog/2016/09/07/simple-android-window-translucent-ui-design/ -->
    <style name="AppTheme.WindowTranslucent.Base" parent="AppTheme">
        <item name="android:fitsSystemWindows">false</item>
    </style>
    <style name="AppTheme.WindowTranslucent" parent="AppTheme.WindowTranslucent.Base"/>

</resources>
